{
  "display": "Node 12",
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true, // esm 支持 cjs, 默认为 false
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "app.ts",
    "paths": {
      "*": ["src/types/*"]
    },
    "typeRoots": ["./typings"]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/index.ts", "typings/*ts"]
}
